    <excludes>
        <pattern>/styles/*</pattern> 
        <pattern>/scripts/*</pattern> 
        <pattern>/images/*</pattern> 
        <pattern>/index.jsp</pattern> 
    </excludes>

    <decorator name="public-layout" page="public-layout.jsp"> 
        <pattern>/*.htm</pattern> 
    </decorator>     
</decorators>