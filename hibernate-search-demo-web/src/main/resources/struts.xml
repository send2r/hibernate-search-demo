<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.objectFactory" value="spring" />
    <constant name="struts.devMode" value="true" />
	<constant name="struts.action.extension" value="htm"/>
    <constant name="struts.custom.i18n.resources" value="messages" />
      
    <package name="public" namespace="/" extends="struts-default">
        <action name="home" method="execute" class="demo.hibernatesearch.action.HomeAction">
            <result name="success">home.jsp</result>
        </action>
        
        <action name="trungtin" method="execute" class="demo.hibernatesearch.action.TrungTinAction">
            <result name="success">trungtin.jsp</result>
        </action>

        <action name="resume-add">  
       			<result name="none">/resume/error.jsp</result>       			
       			<result>/resume/resume-add.jsp</result>       			
		</action>
		
		<action name="save-newresume" class="be.pyco.struts.demo.person.NewResumeAction">        			 			
       			<result name="input">/person/person-add.jsp</result>       			
       			<result type="redirect-action">list-people</result>       			
		</action>

    </package>

</struts>
